@model QuizWeb.Models.QuoteAuthorModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="quiz">
        <div class="tabs">
            <div id="yesNoTab" class="tab">Yes/No</div>
            <div id="multiChoiceTab" class="tab">Multiple Choice</div>
        </div>
        <p>Who Said It</p>
        <p class="quote" id="quote" quoteId="@Model.QuoteId">@Model.QuoteText</p>
        @if (Model.YesNoAuthorId != 0)
        {
            @await Html.PartialAsync("_YesNoPartial", Model)
        }
        else if (Model.MultiChoiceAuthors.Count > 0)
        {
            @await Html.PartialAsync("_MultiChoice")
        }
    </div>
</div>
