@model QuizWeb.Models.QuoteAuthorModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="quiz">
        <div class="tabs">
            <div class="tab">Yes/No</div>
            <div class="tab">Multiple Choise</div>
        </div>
        <p>Who Said It</p>
        <p class="quote" id="quote" quoteId="@Model.Quote.Id">@Model.Quote.Text</p>
        @if (Model.YesNoAuthor != null)
        {
            @await Html.PartialAsync("_YesNoPartial", Model)
        }
        else if (Model.MultiChoiceAuthors.Count > 0)
        {
            @await Html.PartialAsync("_MultiChoice")
        }
    </div>
</div>
